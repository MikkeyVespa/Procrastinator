{
  "name": "landing-page-boilerplate",
  "version": "1.0.0",
  "description": "Landing page boilerplate (static site)",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "live-server --watch=\"build/*.css,build/*.html\" --mount=/:build --port=3001 --host=127.0.0.1",
    "clean": "del-cli build/*",
    "copy": "cpx 'src/**/*.{html,png,jpg,svg,ttf,woff,woff2,js,webmanifest}' build",
    "lint": "npx eslint . && npx stylelint '**/*.scss'",
    "lint:js": "npx eslint .",
    "lint:scss": "npx stylelint '**/*.scss'",
    "build:scss-to-css": "node-sass src/styles/styles.scss -o build/css",
    "build:pug-to-html": "pug src/index.pug -o build --pretty",
    "build:post-css": "postcss --no-map --use autoprefixer cssnano -d build/css --ext .min.css build/css/*.css",
    "build": "del-cli build/* && npm run lint:scss && npm run build:scss-to-css && npm run build:post-css && npm run build:pug-to-html && npm run copy",
    "watch:scss-to-css": "node-sass --watch src/styles/styles.scss -o build/css",
    "watch:pug-to-html": "pug src/index.pug -o build --watch --pretty",
    "watch:copy": "cpx 'src/**/*.{html,png,jpg,svg,ttf,woff,woff2,js,webmanifest}' build --watch",
    "start": "npm run build && concurrently \"npm run serve\" \"npm run watch:scss-to-css\" \"npm run watch:pug-to-html\" \"npm run watch:copy\"",
    "prepublish": "npm run build"
  },
  "author": "Slava Haikin",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cli-real-favicon": "^0.0.8",
    "concurrently": "^8.0.1",
    "cpx": "^1.5.0",
    "cssnano": "^6.0.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "live-server": "^1.2.2",
    "node-sass": "^8.0.0",
    "postcss-cli": "^10.1.0",
    "prettier": "2.8.8",
    "pug-cli": "^1.0.0-alpha6",
    "stylelint": "^15.7.0",
    "stylelint-config-recommended-scss": "^12.0.0"
  }
}
